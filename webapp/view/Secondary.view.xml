<mvc:View
	controllerName="josecarlosgz.navigation.controller.Secondary"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
	<Page
		titleAlignment="Auto"
	>
		<customHeader>
			<Bar>
				<contentLeft>
					<Button
						icon="sap-icon://nav-back"
						press="onNavBack"
					/>
				</contentLeft>
				<contentMiddle>
                        <Title
                            level="H6"
                            text="{i18n>titleSecondaryView}"
                            textAlign="Center"
                            width="100%"
                        />
				</contentMiddle>
				<contentRight/>
			</Bar>
		</customHeader>

		<content>
             <!-- OJO.El componente VBox tiene por defecto el flex-direction: column. Por lo tanto el justifyContent nos alinearÃ¡ en el cross axis (vertical) -->
			<VBox height="100%" justifyContent="Center">

                <HBox   justifyContent="Center" >
                    <core:Icon size="100px"   src="sap-icon://heading2" />
                </HBox>

                <HBox justifyContent="Center"  >
               		 <Text  width="100%" text="Secondary.view.xml" class="size16px"   />
                </HBox>

                <HBox        justifyContent="Center"  >
					<Button text="navigate to Tertiary View" press="navToTertiaryView" />
                </HBox>

			</VBox>
		</content>

	</Page>
</mvc:View>